{
  "name": "secure-restful-apis-communication",
  "version": "1.0.0",
  "description": "Example repository to showcase secure message exchange between Restful APIs through encryption and signature",
  "main": "index.js",
  "dependencies": {
    "axios": "^1.7.7",
    "express": "^4.21.1"
  },
  "scripts": {
    "start:api-1": "API_1_PRIVATE_KEY_FILE=certs/api_1_private_key.pem API_2_PUBLIC_KEY_FILE=certs/api_2_public_key.pem API_2_RECEIVE_MESSAGE_URL=http://localhost:4000/receive-message DEBUG_MODE=true node src/index-api-1.js",
    "start:api-2": "API_2_PRIVATE_KEY_FILE=certs/api_2_private_key.pem API_1_PUBLIC_KEY_FILE=certs/api_1_public_key.pem API_1_RECEIVE_MESSAGE_URL=http://localhost:3000/receive-message DEBUG_MODE=true node src/index-api-2.js",
    "start:all": "npm run start:api-1 & npm run start:api-2",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build-api-1": "docker build -t secure-messages-api-1 -f api-1-Dockerfile .",
    "docker:build-api-2": "docker build -t secure-messages-api-2 -f api-2-Dockerfile .",
    "docker:start-all": "npm run docker:build-api-1 && npm run docker:build-api-2 && docker compose up"
  },
  "author": "hmartos",
  "license": "ISC"
}
